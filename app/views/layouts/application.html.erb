<!DOCTYPE html>
<html>
<head>
  <title>Music</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'style' %>
  <%= favicon_link_tag '16.ico'%>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<header>
  <div class="social-links">
    <div class="container">
      <ul class="social">
        <% if user_signed_in? %>
            <div class="btn-group btn-group-sm">
              <%= link_to 'Sign out', destroy_user_session_path, :method => :delete%>
              <%= link_to 'Edit Profile', edit_user_registration_path%>
            </div>
        <% else %>
            <div class="btn-group btn-group-sm">
              <%= link_to 'Sign in', new_user_session_path%>
              <%= link_to 'Sign up', new_user_registration_path%>
            </div>
        <% end %>
      </ul>
    </div>
  </div>
  <nav class="navbar yamm navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle fa fa-navicon"></button>
        <%=image_tag("basic/logo.png", alt: "logo")%>
      </div>
      <div class="nav_wrapper">
        <div class="nav_scroll">
          <div class="nav-search">
            <form>
              <input type="text" placeholder="Search" />
              <button type="submit"><i class="fa fa-search"></i></button>
            </form>
          </div>

          <ul class="nav navbar-nav">
            <li class="active dropdown">
              <%= link_to 'Home', root_path %>
            </li>
            <li class= "dropdown">
              <%= link_to 'Posts', posts_path %>

            <li class="dropdown">
              <a href="#">TOP 20<i class="fa fa-caret-right"></i></a>
            </li>

            <li class="dropdown">
              <%= link_to 'GENRES', class:'fa fa-caret-right' %>
              <ul class="dropdown-menu">

                <li><%= link_to 'All genres', genres_path, class:'fa fa-caret-right' %></li>
              </ul>
            </li>
            <li class="yamm-fw dropdown"><a href="#" >VIDEOS<i class="fa fa-caret-right"></i></a>
              <ul class="dropdown-menu">

                <li>
                  <div class="yamm-content">
                    <div class="row">
                      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="video-feed">
                          <%=image_tag("videos/video1.jpg", alt: "")%>
                          <h5>Music Band Concert - 2013</h5>
                        </div>
                        <!--\\video-feed-->
                        <a class="to-page" href="#">View All videos</a> </div>
                    </div>
                    <!--row-->
                  </div>
                  <!--yamm content-->
                </li>
              </ul>
            </li>
            <li><a href="#">NEWS</a></li>
          </ul>
        </div>
        <!--/.nav-collapse -->

      </div>
    </div>
  </nav>
</header>

<%= yield %>

</body>
</html>
