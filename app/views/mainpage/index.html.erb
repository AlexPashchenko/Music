<div class="panel-group">

  <% @posts.each do |post| %>
      <div class="panel panel-default">
        <div class="panel-heading"> <%= post.title %>
          <span class="badge"><%=post.comments.count%></span></div>
        <div class="panel-body"><%= link_to 'Show', post %></div>

      </div>
  <% end %>

</div>
<%= will_paginate @posts %>
</div>
