<h1>Posts</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Show', post %></td>
        <%if can?  :destroy, Post %>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<%if can?  :create, Post %>
    <%= button_to 'New Post', new_post_path, method: 'get'%>
<% end %>