<%= form_for(@post) do |f| %>
    <% if post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="actions">
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :description %>
      <%= f.text_area :description %>
      <%= f.label :image %>
      <%= f.file_field :image %>
      <%= f.fields_for :track do |u| %>
          <%= u.label :music %>
          <%= u.file_field :music %>
          <%= u.label :category_id%>
          <%= u.collection_select :genre_id, Genre.order(:name),:id,:name, include_blank: true %>
          </div>
      <%end %>
      </div>
    <div>
      <%= f.submit %>
    </div>
<% end %>
